{
  "name": "requests-interceptor",
  "version": "1.0.0",
  "description": "Requests Interceptor",
  "main": "main.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "ng": "ng",
    "start": "npm-run-all -p electron:serve ng:serve",
    "build": "npm run electron:serve-tsc && ng build --base-href ./",
    "build:dev": "npm run build -- -c dev",
    "build:prod": "npm run build -- -c production",
    "ng:serve": "ng serve --port 4203 -c web -o",
    "electron:serve-tsc": "tsc -p tsconfig.serve.json",
    "electron:serve": "wait-on tcp:4203 && npm run electron:serve-tsc && npx electron . --serve",
    "electron:local": "npm run build:prod && npx electron .",
    "electron:build": "npm run build:prod && electron-builder"
  },
  "dependencies": {
    "@angular/animations": "^11.0.0 || ^12.0.0-0",
    "@angular/cdk": "^11.2.13",
    "@angular/forms": "^11.0.0 || ^12.0.0-0",
    "@angular/material": "^11.2.13",
    "@electron/remote": "^1.2.0",
    "sqlite": "^4.0.23",
    "sqlite3": "^5.0.2",
    "sqlstring": "^2.3.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.1102.6",
    "@angular/cli": "~11.2.6",
    "@angular/compiler-cli": "~11.2.7",
    "@angular-builders/custom-webpack": "^12.1.0",
    "@angular/animations": "~11.2.7",
    "@angular/common": "~11.2.7",
    "@angular/compiler": "~11.2.7",
    "@angular/core": "~11.2.7",
    "@angular/forms": "~11.2.7",
    "@angular/platform-browser": "~11.2.7",
    "@angular/platform-browser-dynamic": "~11.2.7",
    "@angular/router": "~11.2.7",
    "@types/node": "16.4.6",
    "electron": "^13.1.7",
    "electron-builder": "^22.11.7",
    "electron-reload": "^2.0.0-alpha.1",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.1.0",
    "typescript": "~4.1.5",
    "rxjs": "~6.6.0",
    "tslib": "^2.0.0",
    "zone.js": "~0.11.3",
    "wait-on": "^6.0.0"
  },
  "build": {
    "appId": "com.RequestsInterceptor",
    "files": [
      "**/*",
      "dist/**/*"
    ],
    "directories": {
      "output": "release",
      "buildResources": "dist"
    },
    "extraResources": [
      "dist/assets/icons/favicon.png"
    ],
    "win": {
      "icon": "dist/assets/icons/favicon.png",
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "runAfterFinish": true,
      "createDesktopShortcut": true,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    }
  }
}
